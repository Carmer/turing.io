%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %link{href: '/images/turing.ico', rel: 'icon', type: 'image/ico'}
    %title TURING School of Software & Design
    = javascript_include_tag 'modernizr'
    = stylesheet_link_tag 'application'
    = javascript_include_tag '//use.typekit.net/xxm2mvw.js'
    = javascript_include_tag 'analytics'
    :javascript
      try{Typekit.load();}catch(e){}
    :javascript
      (function() {
        var _fbq = window._fbq || (window._fbq = []);
        if (!_fbq.loaded) {
          var fbds = document.createElement('script');
          fbds.async = true;
          fbds.src = '//connect.facebook.net/en_US/fbds.js';
          var s = document.getElementsByTagName('script')[0];
          s.parentNode.insertBefore(fbds, s);
          _fbq.loaded = true;
        }
      })();
      window._fbq = window._fbq || [];
      window._fbq.push(['track', '6021347647294', {'value':'0.00','currency':'USD'}]);
    %noscript
      %img{:alt => "", :height => "1", :src => "https://www.facebook.com/tr?ev=6021347647294&cd[value]=0.00&cd[currency]=USD&noscript=1", :style => "display:none", :width => "1"}/

  %body{class: page_classes}

    %header.mod-header
      .layout-wrap
        %h1= link_to 'TURING School of Software & Design', '/'

        %nav
          %ul
            %li{class: nav_active('difference')}= link_to 'The Difference', '/difference'
            %li{class: nav_active('team')}= link_to 'Our Team', '/team'
            %li{class: nav_active('program')}= link_to 'Program', '/program'
            %li{class: nav_active('admissions')}= link_to 'Admissions', '/admissions'
            %li{class: nav_active('tuition')}= link_to 'Tuition', '/tuition'
            %li{class: nav_active('blog')}= link_to 'Blog', 'http://blog.turing.io/'
            %li{class: nav_active('contact')}= link_to 'Contact', '/contact'

    = yield

    = javascript_include_tag 'application'

    %footer.mod-footer
      %p Â© Copyright 2014 Turing School of Software &amp; Design, All rights reserved
